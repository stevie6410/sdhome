@page "/signals"
@inject ISignalQueryService SignalQueryService

<h3>Recent signals</h3>

@if (_events is null)
{
    <p>Loading...</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Time (UTC)</th>
            <th>Device</th>
            <th>Capability</th>
            <th>Event</th>
            <th>SubType</th>
            <th>Value</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var ev in _events)
        {
            <tr>
                <td>@ev.TimestampUtc</td>
                <td>@ev.DeviceId</td>
                <td>@ev.Capability</td>
                <td>@ev.EventType</td>
                <td>@ev.EventSubType</td>
                <td>@ev.Value</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private IReadOnlyList<SignalEvent>? _events;

    protected override async Task OnInitializedAsync()
    {
        _events = await SignalQueryService.GetRecentAsync(50);
    }
}
